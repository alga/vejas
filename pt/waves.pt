<div class="meteo" tal:define="data python:args[0]">
    <div class="maps">
    <div tal:replace="structure data/extra" />
    <p>
        <img tal:attributes="src data/scale;
                             alt data/title;
                             title data/title"/>
    </p>
    <p>
      <a tal:repeat="hour data/hours"
         tal:attributes="href string:${hour}.html">
        <img tal:attributes="src python: data['picfmt'] % hour;
                             title string:$hour h;
                             alt string:$hour h"/>
      </a>
    </p>
    </div>
</div>
